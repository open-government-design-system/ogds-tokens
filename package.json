{
  "name": "@open-government-design-system/tokens",
  "version": "1.0.0-alpha",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-government-design-system/ogds-tokens.git"
  },
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./styles/*": "./build/*"
  },
  "scripts": {
    "build": "style-dictionary build --config ./config/style-dictionary.config.js",
    "prettier:js": "npx prettier --check '**/*.{cjs,css,js,json,jsx,mjs,ts,tsx}' --config ./config/.prettierrc",
    "prettier:js:fix": "npx prettier --write '**/*.{cjs,css,js,json,jsx,mjs,ts,tsx}' --config ./config/.prettierrc",
    "prettier:md": "npx prettier --check '**/*.{md,mdx}' --config ./config/.prettierrc",
    "prettier:md:fix": "npx prettier --write '**/*.{md,mdx}' --config ./config/.prettierrc"
  },
  "dependencies": {
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "style-dictionary": "^5.1.1"
  }
}
